MascaretRoot:


<MascaretLoginScreen>:
    login_box: login_input
    password_box: password_input
    error_box: error_label
    login_area: login_rect
    canvas:
        Rectangle:
            source: 'gui/mylogo8.jpg'
            size: root.width if (root.width / root.height) > (1920 / 1080) else root.height * (1920 / 1080), root.height if (root.width / root.height) <= (1920 / 1080) else root.width / (1920 / 1080)
            pos: self.pos
    BoxLayout:
        id: login_rect
        BoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: (0,0,0,0.5)
                Rectangle:                
                    source: 'gui/testrectangle.png'
                    size: (self.width + 120, self.height + 20)
                    pos: self.x - 100, self.y + 5
            size_hint: (None, None)
            width: "350dp"
            height: "120dp"
            pos_hint: {'x': .03,'y': .75}
            BoxLayout:
                BoxLayout:
                    size_hint: .7, 1
                    spacing: "15dp"
                    padding: "15dp"
                    orientation: "vertical"
                    Label:
                        text: "Login:"
                        font_size: '20dp'
                        text_size: self.size
                        halign: 'justify'
                        valign: 'top'
                        font_name: 'OCRAEXT.TTF'
                        italic: True
                    Label:
                        text: "Password:"
                        italic: True
                        font_size: '20dp'
                        text_size: self.size
                        halign: 'justify'
                        valign: 'top'
                        font_name: 'OCRAEXT.TTF'
                BoxLayout:
                    orientation: "vertical"
                    spacing: "5dp"
                    padding: "8dp"
                    TextInput:
                        focus: True
                        background_color: (1, 1, 1, 0)
                        foreground_color: (1,1,1,0.8)
                        write_tab: False
                        multiline: False
                        id: login_input
                        on_text_validate: self.parent.parent.parent.parent.parent.password_box.focus = True
                        font_name: 'OCRAEXT.TTF'
                        font_size: '20dp'
                        cursor_color: 1,1,1,0.8
                    TextInput:
                        background_color: (1, 1, 1, 0)
                        foreground_color: (1,1,1,0.8)
                        write_tab: False
                        multiline: False
                        id: password_input
                        on_text_validate: root.login()
                        password: True
                        font_name: 'OCRAEXT.TTF'
                        font_size: '20dp'
                        cursor_color: 1,1,1,0.8
            BoxLayout:
                size_hint: 1, 0.25
                Label:
                    text_size: self.size
                    id: error_label
                    font_name: 'OCRAEXT.TTF'
                    font_size: '16dp'
                    color: (1,0.5,0.5,0.8)
                    valign: 'top'
                    halign: 'right'

<MascaretBigScreen>:
    mode: "narrow" if self.width < 800 else "wide"

<HomePage>:
    name: 'homepage'
    screen1_box: box
    right_Button: right_but
    Screen:
        name: '1'
        BoxLayout:
            id: box
            FloatLayout:
                name: "floaat"
                canvas:
                    Color:
                        rgba: (1,1,1,1)
                    Rectangle:
                        size: self.size
                        pos: 0,0
                GridLayout:
                    spacing: 30
                    size_hint: 0.5, 0.5
                    pos_hint: {'x': 0.25, 'y': 0.15}
                    cols: 2
                    canvas:
                        Color:
                            rgba: (1,1,1,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    HoverButton:
                        text: 'ModuleRH'
                        background_normal: 'gui/rectbut1.png'
                        background_color: (100/255, 100/255, 230/255, 1)
                        on_release: self.parent.parent.parent.parent.parent.manager.current = 'modulerh'
                    HoverButton:
                        text: 'ModuleCG'
                        background_normal: 'gui/rectbut1.png'
                        background_color: (100/255, 230/255, 230/255, 1)
                        on_release: self.parent.parent.parent.parent.parent.manager.current = 'modulecg'
                    HoverButton:
                        text: 'ModuleCO'
                        background_normal: 'gui/rectbut1.png'
                        background_color: (236/255, 232/255, 100/255, 1)
                        on_release: self.parent.parent.parent.parent.parent.manager.current = 'moduleco'
                    HoverButton:
                        text: 'ModuleLO'
                        background_normal: 'gui/rectbut1.png'
                        background_color: (230/255, 100/255, 100/255, 1)
                        on_release: self.parent.parent.parent.parent.parent.manager.current = 'modulelo'
                HoverButton:
                    id: right_but
                    size_hint: 0.07,1
                    pos_hint: {'x': 1}
                    disabled: True
                    text: 'Go to Screen 2'
                    background_normal: 'rectbut1.png'
                    background_color: (230/255, 230/255, 230/255, 1)
                    on_press:
                        self.parent.parent.parent.manager.transition.direction = 'left'
                        self.parent.parent.parent.manager.current = '2'

        
            
    Screen:
        name: '2'
        Button:
            background_normal: ''
            background_color: (230/255, 230/255, 230/255, 1)
            text: 'Go to Screen 1'
            on_press:
                self.parent.manager.transition.direction = 'right'
                self.parent.manager.current = '1'




